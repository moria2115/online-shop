<%- include('includes/head', { pageTitle: 'All Products' }) %>
</head>

<body>
    <%- include('includes/header') %>
    <link rel="stylesheet" href="/styles/product.css" />

</head>
<main>

    <h1>All Products</h1>

    <section class="alt">

      <p><a href="/new-product">Add NEw Product</a></p>
    </section>

    <% if (!products || products.length === 0) { %>
      <p>Could not find any products. You need to first create some!</p>
      <% } else { %>
        <ul class="products-grid">
        <% for (const product of products) { %>
   
      <%- include('includes/product-item', { product: product }) %>
    
   
    <% } %>
  </ul>
    <% } %>

      </main>

</body>
</html>